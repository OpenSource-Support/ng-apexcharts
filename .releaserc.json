{
  "branches": [
    "master"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "docs",
            "release": "patch"
          },
          {
            "breaking": true,
            "release": "major"
          },
          {
            "type": "feat",
            "scope": "*",
            "subject": "*!*",
            "release": "major"
          },
          {
            "subject": "*BREAKING CHANGE*",
            "release": "major"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "angular"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyConditionsCmd": "echo 'Verifying build environment...' && npx ng version && echo 'Checking commit history...' && git log --oneline -10",
        "prepareCmd": "echo 'Updating library version to ${nextRelease.version}' && npm run update-lib-version ${nextRelease.version} && echo 'Verifying source update:' && cat projects/ng-apexcharts/package.json | grep version"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "echo 'Building ng-apexcharts...' && ng build ng-apexcharts && echo 'Verifying built version:' && cat dist/ng-apexcharts/package.json | grep version"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "echo 'About to publish:' && cat dist/ng-apexcharts/package.json | grep -E '\"version|\"name' && cd dist/ng-apexcharts && npm publish"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "projects/ng-apexcharts/package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}